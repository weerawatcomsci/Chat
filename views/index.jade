doctype html
html
	head
    
		title Chat Application by Tom
		link(rel='stylesheet', href='css/main.css')
		script(src="https://cdn.socket.io/socket.io-1.3.3.js")
		script(src="http://code.jquery.com/jquery-1.11.2.min.js")
	body
		div.container
			h1 Chat Application by Tom
			div#chat-box
				ul
				form(action='')
					input(type="text", id="message", autocomplete="off")
					button Send
		script.
			var socket = io();
			$('form').submit(function() {
				socket.emit('chatter', $('#message').val());
				$('#message').val('');
				return false;	
			});

			socket.on('chatter', function(message) {
				$('#chat-box ul').append($('<li>').text(message));
			});
